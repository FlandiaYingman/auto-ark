<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.2"
            fx:controller="top.anagke.auto_android.auto.AndroidRecorder">
   <center>
      <ImageView fx:id="imageView" fitHeight="720.0" fitWidth="1280.0" onMouseDragged="#onMouseUp"
                 onMousePressed="#onMouseDown" onMouseReleased="#onMouseUp" pickOnBounds="true" preserveRatio="true"
                 BorderPane.alignment="CENTER"/>
   </center>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="buttonCapture" mnemonicParsing="false" onAction="#onCaptureAction" text="Capture"/>
            <Button fx:id="buttonSave" mnemonicParsing="false" onAction="#onSaveAction" text="Save"/>
            <TextField fx:id="tapField" promptText="tap(...)">
               <font>
                  <Font name="Fira Code Regular" size="12.0"/>
               </font>
            </TextField>
            <TextField fx:id="dragField" promptText="drag(...)">
               <font>
                  <Font name="Fira Code Retina" size="12.0"/>
               </font>
            </TextField>
         </children>
      </HBox>
   </top>
</BorderPane>
